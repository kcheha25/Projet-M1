def plot_histogram(test_areas, gt_areas, prefix):
    fig, axs = plt.subplots(1, 2, figsize=(12, 6))

    # Histogramme pour les prédictions du modèle
    axs[0].bar(range(len(test_areas)), normalize_counts(test_areas), color='blue', alpha=0.6)
    axs[0].set_title(f"Prédictions du modèle pour le groupe {prefix}")
    axs[0].set_xlabel("Surface en nanomètres")
    axs[0].set_ylabel("Nombre d'objets détectés (normalisé)")
    axs[0].set_ylim(0, 1)  # Limite de l'axe y
    axs[0].set_xticks(np.arange(0, len(test_areas), step=1))  # Ajuster le pas de l'axe x

    # Histogramme pour les masques de vérité terrain
    axs[1].bar(range(len(gt_areas)), normalize_counts(gt_areas), color='orange', alpha=0.6)
    axs[1].set_title(f"Masques de vérité terrain pour le groupe {prefix}")
    axs[1].set_xlabel("Surface en nanomètres")
    axs[1].set_ylabel("Nombre d'objets détectés (normalisé)")
    axs[1].set_ylim(0, 1)  # Limite de l'axe y
    axs[1].set_xticks(np.arange(0, len(gt_areas), step=1))  # Ajuster le pas de l'axe x

    plt.tight_layout()
    plt.show()
